mixin item-ivent(data)
	+b.program-item()&attributes(attributes)
		+e.star(class= data.active)
			+icon('star-active')
		.row
			if data.d
				+e.time.strong.col-auto!= data.d
			if data.l
				+e.col-label.col-md!= data.l
			+e.text-block.col
				+e.title
					a(href="#").text-body!= data.t
		if data.copy
			+b.copy-block 
				.row 
					.col-12
						.smallest Ссылка на комнату в ZOOM
						+e.link https://kia.zoom.us/j/6023033051?pwd=d1pITVNncTFuddasdasd
					.col-auto
						button.btn.btn-primary Копировать
					.col-auto
						button.btn.btn-primary Подключитьсяы
		if block
			block
		else
			div.mb-1 Ольга Сигаль  
			.smallest.pb-3 Kia
